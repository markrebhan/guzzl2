<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/background_infobar"
    android:weightSum="8">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/image_fuel"
            android:layout_width="48dp"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/progressbar_fuel_gauge"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:maxHeight="32dp"
            android:layout_gravity="center"
            android:progress="100"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_fuel"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/image_range"
            android:layout_width="48dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textColor="@color/text_silver"
            android:text="test"/>



        </LinearLayout>



</LinearLayout>