<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseMapActivity" >

    <fragment
        android:id="@+id/fragment_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.mrebhan.guzzl.fragments.MapsFragment" />

    <!-- Add a framelayout to push/pop fragments -->

    <FrameLayout
        android:id="@+id/frameLayout_main"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
        
    </FrameLayout>
    
    <!-- this framelayout will house the fragment for the infobar -->
    
    <FrameLayout
        android:id="@+id/frameLayout_infoBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding = "5dp">

    </FrameLayout>

</RelativeLayout>