<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <TextView 
        android:id="@+id/slider_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DDDDDD"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"/>
    
    <TextView 
        android:id="@+id/slider_value_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DDDDDD"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/slider_label"
        android:layout_alignParentRight="true"/>
    
    <EditText 
        android:id="@+id/slider_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/slider_value_type"
        android:layout_alignTop="@+id/slider_label"
        android:layout_marginRight="5dp"
        android:maxLength="3"
        android:singleLine="true"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:text="@string/slider_starting_value"
        android:textColor="#DDDDDD"
        
        android:background="@drawable/edittext_slider"/>
    
    <SeekBar 
        android:id="@+id/slider_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider_label"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>
